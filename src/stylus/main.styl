/* Change default font or add other variables here
 * Importing whole stylus file is too big for bundle (~250kb), 
 * so do modify these settings yourself in vuetify stylus
 */
$body-font-family = 'Noto Sans TC', 'Roboto', sans-serif
$grid-breakpoints = {
    xs: 0
    sm: 600px
    md: 960px
    lg: (1280px - 16px) // Desktop gets a 16dp reduction
    xl: (2160px - 16px) // https://material.io/guidelines/layout/responsive-ui.html#responsive-ui-breakpoints
}
@require '~vuetify/src/stylus/main'
